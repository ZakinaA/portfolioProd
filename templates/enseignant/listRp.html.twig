{% extends "baseEnseignant.html.twig" %}

{% block contenu%}
</br>
 <div class="container-fluid">
    <div class="col-lg-12">
                  <div class="card">
                    <div class="card-close">
                      <div class="dropdown">
                        <button type="button" id="closeCard3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                        <div aria-labelledby="closeCard3" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                      </div>
                    </div>	

                {% for p in promotions  %}  		
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4"><h3 class="h4"> Promotion {{p.annee}}  </h3>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive"> 

                        <table class="table table-striped table-sm">
                          <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Spécialité</th>
                                <th>Rp</th>
                                <th>Statut</th>
                                
                            </tr>
                          </thead>
                          <tbody>
                          {% for e in p.etudiants  %}
                           {% for rp in e.rps  %}
                            <tr>
                              <td>{{e.nom}} </td>
                              <td>{{e.prenom}}</td>
                              <td>{{e.specialite.nom}}</td>
                              <td> <a href="{{ path('listRpParEtudiant', {'idEtudiant': e.id  }) }}">{{rp.libcourt}}</a></td>
                            
                             <td>{{rp.statut.libelle}}</td>
                            </tr>
                            {% endfor %}
                            {% endfor %}
                         </tbody>
                        </table>
                     </div>
                    </div>

                    {% endfor  %}  
                  </div>
                </div>      
         </div>   
{% endblock %}