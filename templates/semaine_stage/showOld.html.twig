{% extends "baseEnseignant.html.twig" %}
{% block titreContenu %}Mon stage ({{stage.nomEntreprise}}){% endblock %}


{% block contenu%}
</br>
<div class="col-lg-12">
  <div class="card">
                  
    <div class="card-header d-flex align-items-center">
        
        <!-- Breadcrumb-->
        <div class="breadcrumb-holder container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active"><a href="{{ path('showStage', {'idStage': stage.id }) }}">Info</a></li>
                {% if stage.duree > 0 %}          
                    {% set nbSem = stage.duree %}
                    {% for i in 1..nbSem %}
                        <li class="breadcrumb-item"><a href="{{path('showSemaineStage', {'idStage': stage.id, 'numSemaine': i})}}"> Semaine {{ i }} </a></li>                         
                    {% endfor %}
                {% endif %}
            </ul>
        </div>




    </div>

  </div>
</div>    



          <section class="updates no-padding-top">
            <div class="container-fluid">
              <div class="row">

                <div class="col-lg-3">
                  <div class="recent-activities card">
                    <div class="card-close">
                      <div class="dropdown">
                        <button type="button" id="closeCard8" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                        <div aria-labelledby="closeCard8" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                      </div>
                    </div>
                    <div class="card-header">
                      <h3 class="h4">Jours de la semaine</h3>
                    </div>
                    <div class="card-body no-padding">
                      
                      <ul id="myTab" role="tablist" class="nav nav-tabs  nav-pills text-default flex-column text-center bg-light border-0 rounded-nav">
                        <li class="nav-item flex-sm-fill">
                          <a id="jour1-tab" data-toggle="tab" href="#jour1" role="tab" aria-controls="jour1" aria-selected="true" class="nav-link border-0 text-uppercase font-weight-bold fs-6 active">Lundi</a>
                        </li>
                        <li class="nav-item flex-sm-fill">
                          <a id="jour2-tab" data-toggle="tab" href="#jour2" role="tab" aria-controls="jour2" aria-selected="false" class="nav-link border-0 text-uppercase font-weight-bold">Mardi</a>
                        </li>
                        <li class="nav-item flex-sm-fill">
                          <a id="jour3-tab" data-toggle="tab" href="#jour3" role="tab" aria-controls="jour3" aria-selected="false" class="nav-link border-0 text-uppercase font-weight-bold">Mercredi</a>
                        </li>
                        <li class="nav-item flex-sm-fill">
                          <a id="jour4-tab" data-toggle="tab" href="#jour4" role="tab" aria-controls="jour4" aria-selected="false" class="nav-link border-0 text-uppercase font-weight-bold">Jeudi</a>
                        </li>
                        <li class="nav-item flex-sm-fill">
                          <a id="jour5-tab" data-toggle="tab" href="#jour5" role="tab" aria-controls="jour5" aria-selected="false" class="nav-link border-0 text-uppercase font-weight-bold">Vendredi</a>
                        </li>
                        <li class="nav-item flex-sm-fill">
                          <a id="jour6-tab" data-toggle="tab" href="#jour6" role="tab" aria-controls="jour6" aria-selected="false" class="nav-link border-0 text-uppercase font-weight-bold">Samedi</a>
                        </li>
                      </ul>
                 

                    </div>
                  </div>
                </div>

                

                <div class="col-lg-9">
                  <div class="recent-activities card">
                    <div class="card-close">
                      <div class="dropdown">
                        <button type="button" id="closeCard8" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                        <div aria-labelledby="closeCard8" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                      </div>
                    </div>
                    <div class="card-header">
                      <h3 class="h4">Activités</h3>
                    </div>
                    <div class="card-body no-padding">


                      

                      <div id="myTabContent" class="tab-content">
                        {% set jourID = 0 %}
                        {% set nbTaches = 0 %}

                        {% for tache in semaineStage.tachesemaines %}
                          {% if tache|length > 0 %}
                        
                            {% if tache.jour.id == jourID %}
                              <div class="item">
                                <div class="row">
                                  <div class="col-2 date-holder text-right">
                                    <div class="icon"><i class="icon-clock"></i></div><br>
                                    <div class="date"> <span>{{tache.jour.nom}}</span></div>
                                  </div>
                                  <div class="col-10 content">
                                    <h5>{{tache.domaineTache.libelle}}</h5>
                                    <p>{{tache.description}}</p>
                                  </div>
                                </div>
                              </div>





                            {% else %}

                                {% if jourID != 0 %}
                                  
                                  </div>
                                {% endif %}

                                {% if jourID == 0 %}
                                  <div id="jour{{tache.jour.id}}" role="tabpanel" aria-labelledby="jour{{tache.jour.id}}-tab" class="tab-pane fade px-4 py-5 active show">
                                {% else %}
                                  <div id="jour{{tache.jour.id}}" role="tabpanel" aria-labelledby="jour{{tache.jour.id}}-tab" class="tab-pane fade px-4 py-5">
                                {% endif %}
                                
                                  <div class="item">
                                    <div class="row">
                                      <div class="col-2 date-holder text-right">
                                        <div class="icon"><i class="icon-clock"></i></div><br>
                                        <div class="date"> <span>{{tache.jour.nom}}</span></div>
                                      </div>
                                      <div class="col-10 content">
                                        <h5>{{tache.domaineTache.libelle}}</h5>
                                        <p>{{tache.description}}</p>
                                      </div>
                                    </div>
                                  </div>
                                {% set jourID = tache.jour.id %}
                            {% endif %}



                          {% endif %}  
                        {% endfor %}
                        {% set jourID = jourID + 1 %}
                        </div>
                        {% if 6 - jourID >= 0 %}
                          {% for i in jourID..6%}
                            
                            <div id="jour{{i}}" role="tabpanel" aria-labelledby="jour{{i}}-tab" class="tab-pane fade px-4 py-5">
                              <div class="item">
                                <div class="row text-align">
                                    <span class="badge badge-pill badge-info" style="background-color:#796AEE; font-size: 1.1em; padding: 0.5vh 2.5%;">Il n'y a pas d'activités pour ce jour.</span>
                                </div>
                              </div>
                            </div>
                          {% endfor %}
                        {% endif %}

                      </div>                   
                 

                    </div>
                  </div>
                </div>



    

        </div> <!-- class row-->
    </div>
</section>



{% endblock %}